<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>


    <style name="AppTheme.SplashActivity">
        <item name="android:windowBackground">@drawable/bg_splash_background</item>
        <item name="android:windowFullscreen">true</item>
    </style>
    <style name="AppTheme.FollowTextView">
        <item name="android:layout_width">44dp</item>
        <item name="android:layout_height">22dp</item>
        <item name="android:background">@drawable/shape_follow_radius_black_2dp_bg</item>
        <item name="android:gravity">center</item>
        <item name="android:text">@string/plus_follow</item>
        <item name="android:textSize">10sp</item>
        <item name="typeface">fzdb1Typeface</item>
    </style>
    <style name="AppTheme.VideoDurationTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">3.5dp</item>
        <item name="android:paddingTop">1dp</item>
        <item name="android:paddingEnd">3.5dp</item>
        <item name="android:paddingBottom">1dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:background">@drawable/shape_time_radius_black_2dp_bg</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="typeface">dinTypeface</item>
    </style>

</resources>